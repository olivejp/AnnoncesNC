<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.orlanth23.annoncesnc">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:required="true" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/ic_action_icon"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">

        <!-- This metadata provide access to facebook API -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.activity.FullScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/ImageViewerTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="http://oliweb.servehttp.com"
                    android:pathPrefix="/annoncesMobile"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.SwipeActivity"
            android:label="Demo"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.activity.LoginFirebaseActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".ui.activity.PostAnnonceActivity"
            android:label="@string/action_post"
            android:parentActivityName=".ui.activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activity.RegisterFirebaseActivity"
            android:label="@string/title_register"
            android:parentActivityName=".ui.activity.LoginFirebaseActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.ui.activity.LoginFirebaseActivity" />
        </activity>
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activity.LostFirebasePasswordActivity"
            android:label="@string/action_lost_password"
            android:parentActivityName=".ui.activity.LoginFirebaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.ui.activity.LoginFirebaseActivity" />
        </activity>
        <activity
            android:name=".ui.activity.ChangePasswordFirebaseActivity"
            android:label="@string/change_password"
            android:parentActivityName=".ui.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activity.WorkImageActivity"
            android:label="@string/title_activity_work_image"
            android:parentActivityName=".ui.activity.PostAnnonceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.ui.activity.PostAnnonceActivity" />
        </activity>
        <activity
            android:name=".ui.activity.ImageViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_viewer"
            android:theme="@style/ImageViewerTheme" />

        <provider
            android:name=".provider.AnnoncesProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />

        <service android:name=".sync.AnnoncesAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name=".sync.AnnoncesSyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <service android:name=".notification.AnnonceMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_oliweb" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/ColorAccent" />

    </application>

</manifest>
