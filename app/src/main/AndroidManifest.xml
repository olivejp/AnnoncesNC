<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orlanth23.annoncesNC">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission
        android:name="android.permission.CALL_PHONE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.SEND_SMS"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_oliweb"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:theme="@style/MyMaterialTheme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://oliweb.servehttp.com/annoncesMobile” -->
                <data
                    android:host="http://oliweb.servehttp.com"
                    android:pathPrefix="/annoncesMobile"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivityRetrofit"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.PostAnnonceActivity"
            android:label="@string/action_post"
            android:parentActivityName=".activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_register"
            android:parentActivityName=".activity.LoginActivityRetrofit"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.LoginActivityRetrofit" />
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.LostPasswordActivity"
            android:label="@string/action_lost_password"
            android:parentActivityName=".activity.LoginActivityRetrofit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.LoginActivityRetrofit" />
        </activity>
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:label="@string/change_password"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.WorkImageActivity"
            android:label="@string/title_activity_work_image"
            android:parentActivityName=".activity.PostAnnonceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesNC.activity.PostAnnonceActivity" />
        </activity>
        <activity
            android:name=".activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ImageViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_viewer"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>