<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orlanth23.annoncesnc">
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.INTERNET" android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" android:required="true" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_annonces"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.orlanth23.annoncesnc.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://oliweb.servehttp.com/annoncesMobile” -->
                <data
                    android:host="http://oliweb.servehttp.com"
                    android:pathPrefix="/annoncesMobile"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.LoginFirebaseActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.PostAnnonceActivity"
            android:label="@string/action_post"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.RegisterActivity"
            android:label="@string/title_register"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.LoginActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.RegisterFirebaseActivity"
            android:label="@string/title_register"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.LoginFirebaseActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.LoginFirebaseActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.LostPasswordActivity"
            android:label="@string/action_lost_password"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.LoginActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.ChangePasswordActivity"
            android:label="@string/change_password"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.ChangePasswordFirebaseActivity"
            android:label="@string/change_password"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.WorkImageActivity"
            android:label="@string/title_activity_work_image"
            android:parentActivityName="com.orlanth23.annoncesnc.activity.PostAnnonceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.orlanth23.annoncesnc.activity.PostAnnonceActivity" />
        </activity>
        <activity
            android:name="com.orlanth23.annoncesnc.activity.ImageViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_viewer"
            android:theme="@style/FullscreenTheme" />

        <provider
            android:name="com.orlanth23.annoncesnc.provider.AnnoncesProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true"/>

        <service android:name=".sync.AnnoncesAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>
        <service android:name=".sync.AnnoncesSyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter"/>
        </service>
    </application>

</manifest>
