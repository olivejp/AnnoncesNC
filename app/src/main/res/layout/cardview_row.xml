<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageColorCategory"
            android:contentDescription="@string/image_color"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/badge_round"
            android:src="@drawable/ic_action_add" />

        <RelativeLayout
            android:id="@+id/relativeLayoutDrawerListAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textIdAnnonce"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linear_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTitreAnnonce"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.9"
                    android:gravity="center_vertical"
                    android:text="Test titre"
                    style="@style/TextAppearance.AppCompat.Title"/>

                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/iconeOliweb"
                    android:src="@drawable/ic_camera_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/textDescriptionAnnonce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_titre"
                android:gravity="center_vertical"
                android:text="Test Description surper longue qui va durer un maximum de temps à ce que je l'écrive."
                style="@style/Base.TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/textDatePublicationAnnonce"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_below="@+id/textDescriptionAnnonce"
                android:gravity="center"
                android:text="23/03/2016"
                style="@style/TextAppearance.AppCompat.Caption"/>

            <TextView
                android:id="@+id/textPrixAnnonce"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textDescriptionAnnonce"
                android:gravity="center"
                android:text="400 000"
                style="@style/TextAppearance.AppCompat.Body2"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
