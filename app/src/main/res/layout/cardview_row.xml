<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relativeLayoutDrawerListAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <TextView
            android:id="@+id/textIdAnnonce"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textColorCategory"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textDatePublicationAnnonce"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignTop="@+id/linear_titre"
            android:background="@color/ColorPrimary" />

        <LinearLayout
            android:id="@+id/linear_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textColorCategory"
            android:layout_toRightOf="@+id/textColorCategory"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTitreAnnonce"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:text="Test titre"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/iconeOliweb"
                android:src="@drawable/ic_camera_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDescriptionAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_titre"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textColorCategory"
            android:layout_toRightOf="@+id/textColorCategory"
            android:gravity="center_vertical"
            android:text="Test Description surper longue qui va durer un maximum de temps à ce que je l'écrive."
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textDatePublicationAnnonce"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/textDescriptionAnnonce"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textColorCategory"
            android:layout_toRightOf="@+id/textColorCategory"
            android:gravity="center"
            android:text="23/03/2016"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#263238"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textPrixAnnonce"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textDescriptionAnnonce"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="400 000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#263238"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
